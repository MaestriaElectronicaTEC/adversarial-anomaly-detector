\newcommand{\exampleBegin}[1][nothing]{%
  \refstepcounter{nexample}%
  \ifthenelse{\equal{#1}{nothing}}{
    \paragraph*{\examplename~\thenexample}
  }{%\index{Beispiel!#1}%
   \paragraph*{\examplename~\thenexample}
   \addcontentsline{xmp}{example}{%
   \numberline {\thenexample} #1}
  }
}

